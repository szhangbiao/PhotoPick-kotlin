<?xml version="1.0" encoding="utf-8"?>
<com.photopick.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo_pick_name"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/photo_pick_dp_8">

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/photo_pick_selector_check"
            android:gravity="center"
            android:textColor="@color/photo_pick_white"
            android:textSize="@dimen/photo_pick_sp_12" />
    </LinearLayout>
</com.photopick.widget.SquareRelativeLayout>